extends layout

block styles
  link(rel='stylesheet' href='/css/login.css')

block title
  title Quizzard - Login

block content
  .container
    img.hide-on-med-and-down#logo(src='img/logo.png')
    form.form-login#login
      div.hide-on-large-only#mobileDiv
        span.col.s1#logoDiv
          img#logoMobile(src='img/logo.png')
        span.col.s2#uizzardDiv
          h2.form-login-heading uizzard
      br
      p#invalid
      .row
        .input-field.col.s12
          i.material-icons.prefix person
          input.form-control#user(type='text' name='user' placeholder='Username' required autofocus)
          label.sr-only(for='user') Username
      .row
        .input-field.col.s12
          i.material-icons.prefix keyboard
          input.form-control#passwd(type='password' name='passwd' placeholder='Password' required)
          label.sr-only(for='passwd') Password
      button(class='btn btn-lg btn-primary btn-block' type='submit') Sign in

block scripts
  script(src='/js/common.js')
  script(src='/js/login.js')
