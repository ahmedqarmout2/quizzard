extends layout

block styles
  link(rel='stylesheet' href='/css/icons.css')
  link(rel='stylesheet' href='/css/sidebar.css')
  link(rel='stylesheet' href='/css/navbar.css')
  link(rel='stylesheet' href='/css/profile.css')
  link(rel='stylesheet' href='/lib/materialize/css/materialize.min.css')

block content
  include navbar

  .container
    .row
      .col.s12
        br
        .card
          .hidden#cancelButton
            .card-image
              a.btn-floating.halfway-fab.waves-effect.waves-light.red.right#question-creation-back-button
                i.material-icons close
          .row.center
            .col.s12
            .fixed-action-btn.horizontal.profile-picture
              a.btn-floating.btn-large.blue.profile-circle
                img.picure-size(src='/img/logo.png')
              ul.profile-list
                li
                  a.btn-floating.red
                    i.material-icons delete
                li
                  a.btn-floating.blue
                    i.material-icons backup
              h4 UTORID
            .col.s1
            #viewForm
              .col.s10
                .row
                  .input-field.col.s12
                    span Fist Name:&nbsp
                    span firstnamehere
                .row
                  .input-field.col.s12
                    span Last Name:&nbsp
                    span lastnamehere
                .row
                  .input-field.col.s12
                    span Email:&nbsp
                    span this.is@the.email
                .row
                  button.waves-effect.waves-light.btn(type='button', onclick='enableEdit()') Edit Information
                    i.material-icons.right send
            .hidden#editForm
              .col.s10
                .row
                  .input-field.col.s6
                    input#fname.validate(type='text' name='newfname' required autofocus)
                    label(for='fname') First Name
                  .input-field.col.s6
                    input#lname.validate(type='text' name='newlname' required)
                    label(for='lname') Last Name
                .row
                  .input-field.col.s12
                    input#passwd.validate(type='password' name='newpassword' required)
                    label(for='passwd') Password
                .row
                  .input-field.col.s12
                    input#email.validate(type='email' name='newemail' required)
                    label(for='email') Email
                .row
                  button.waves-effect.waves-light.btn(type='submit') Edit
                    i.material-icons.right send

block scripts
  script(src='/lib/jquery/jquery-3.1.1.min.js')
  script(src='/lib/bootstrap/js/bootstrap.min.js')
  script(src='/lib/materialize/js/materialize.min.js')
  script(src='/js/navbar.js')
  script(src='/js/profile.js')
