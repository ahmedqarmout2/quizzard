block styles
  link(rel='stylesheet' href='/css/rating.css')

.row
  .col.s12
    .card.center
      .card-image
        a.btn-floating.halfway-fab.waves-effect.waves-light.red.left#question-edit-back-button
          i.material-icons arrow_back
      .card-content
        h5.card-title Question Edit
        h6 Modify and update question's information.
      .card-action
        form.form-edit#question-edit-form
          .form-group.row
            label.col-sm-2.col-form-label(for='qtitle') Title
            .col-sm-10
              input.form-control#qtitle(type='text' name='title' placeholder='New title' value=question.title autofocus)
          .form-group.row
            label.col-sm-2.col-form-label(for='qtext') Question Body
            .summernote#qtext(value=question.text)
          .form-group.row
            label.col-sm-2.col-form-label Visible
            .col-sm-10
              input.form-control(id='visible', type='checkbox', checked=question.visible)
              label.col-sm-2.col-form-label(for='visible')
          #qAnswer
            | !{getQuestionForm()}
          .form-group.row
            label.col-sm-2.col-form-label(for='qtopic') Topic
            .col-sm-10
              .input-field
                input.form-control#qtopic.autocomplete(type='text' name='topic' placeholder='New topic' value=question.topic autocomplete='off' required)
          .form-group.row
            label.col-sm-2.col-form-label(for='qminpoints') Min Points
            .col-sm-4
              input.form-control#qminpoints(type='number' name='minpoints' placeholder='New min points' value=question.minpoints min="0")
            label.col-sm-2.col-form-label(for='qmaxpoints') Max Points
            .col-sm-4
              input.form-control#qmaxpoints(type='number' name='maxpoints' placeholder='New max point' value=question.maxpoints min="0")
          .form-group.row
            label.col-sm-2.col-form-label(for='qhint') Hint
            .col-sm-10
              input.form-control#qhint(type='text' name='hint' placeholder='New hint' value=question.hint)
          .form-group.row
            label.col-sm-2.col-form-label(for='qrating') Question Difficulty
            .left
              include rating
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Update
