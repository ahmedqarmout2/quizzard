block styles
  link(rel='stylesheet' href='/css/admin.css')
  
.row
  .col.s12
    .card.center
      .card-image
        a.btn-floating.halfway-fab.waves-effect.waves-light#question-creation-button
            i.material-icons playlist_add
      .card-content
        h5.card-title Manage Questions
        h6 Add, modify or delete questions.
        //remove if statement to turn on deletion feature
        if false
          .switch
            label
              | Deleted
              input(id='questionSwitch', type='checkbox', onClick='toggleQuestionSwitch()')
              span.lever
              | Active
      .card-action
        table.bordered.centered
          thead
            tr
              if isActive
                th Visiblity
                  br
                  .chip(onClick='updateAllVisibility(true)') Show All
                  .chip(onClick='updateAllVisibility(false)') Hide All 
                  br
                  .switch
                    label
                      | Display
                      input(id='sw' type='checkbox', checked=false, onClick='toggleButtonVisibility(null)')
                      span.lever
                      | Edit
              th ID
              th Title
              th Topic
              th Type
              th Action
          tbody
            each q in questions
              tr
                if isActive
                  td.center
                    p
                      if q.visible
                        i.material-icons.hiddenEye(id='hiddenEye' + q._id, onClick='visibilitySnackbar()') visibility
                      else
                        i.material-icons.hiddenEye(id='hiddenEye' + q._id, onClick='visibilitySnackbar()') visibility_off
                      input.checked(id='checked-' + q._id, name=q.number, type='checkbox', checked=q.visible)
                      label.visbox(for='checked-' + q._id, name=q.number)
                td #{q.number}
                td #{q.title}
                td #{q.topic}
                td #{questionType(q.type)}
                td
                  button.btn.btn-default.view-button(id='view-' + q._id, name=q.number, type='button', aria-label='View')
                    i.material-icons remove_red_eye
                  if isActive
                    button.btn.btn-default.edit-button(id='edit-' + q._id, name=q.number, type='button', aria-label='Edit')
                      i.material-icons edit
                    button.btn.btn-default.delete-button(id='delete-' + q._id, name=q.number, type='button', aria-label='Delete')
                      i.material-icons close