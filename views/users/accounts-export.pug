.row
  .col.s12
    .card.center
      .card-image
        a.btn-floating.halfway-fab.waves-effect.waves-light.red.left#account-export-back-button
          i.material-icons arrow_back
      .card-content
        h5.card-title Accounts Export Form
        h6 Export the list of students' accounts as a csv file
      .card-action
        form.form-user#exportForm
          table.bordered.highlight
              thead
                tr
                  th Included
                  th First Name
                  th Last Name
                  th User ID
                  th Email
                  th Active
              tbody
                each s in students
                  tr(class=s.active ? '' : 'grey lighten-2')
                    td
                      p
                        input.checked(id='checked-' + s.id type='checkbox' checked=s.active)
                        label.visbox(for='checked-' + s.id)
                    td #{s.fname}
                    td #{s.lname}
                    td #{s.id}
                    td #{s.email}
                    td #{s.active}
          br
          button(class='btn' type='submit') Export