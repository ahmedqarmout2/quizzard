extends layout

block styles
  link(rel='stylesheet' href='/css/leaderboard.css')
  link(rel='stylesheet' href='/css/leaderboard-table.css')
  link(rel='stylesheet' href='/css/sidebar.css')

block title
  title Quizzard - Leaderboard

block content
  include navbar

  br
  .container
    .row
      .col.s12
        .row
          ul.tabs
            li.tab.col.s3
              a.noLineLink.active#option-overall(href='#') Overall
            li.tab.col.s3
              a.noLineLink#option-points(href='#') Total Points
            li.tab.col.s3
              a.noLineLink#option-accuracy(href='#') Accuracy
            li.tab.col.s3
              a.noLineLink#option-attempt(href='#') Points Per Attempt
  .container
    .row
      .col.s6
        .card.white
          .leaderboard-content
      .col.s6
        .card.white
          .podium
            p
              | Top Score : 
              span.score [Highest Score Will Go Here]
            ol
              li.gold
                img(alt='first', src='img/leaderboard_profile.png')
                span.score 1st
              li.silver
                img(alt='second', src='img/leaderboard_profile.png')
                span.score 2nd
              li.bronze
                img(alt='third', src='img/leaderboard_profile.png')
                span.score 3rd

block scripts
  script(src='/js/leaderboard.js')
  script(src='/js/navbar.js')
