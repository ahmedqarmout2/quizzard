extends layout

block styles
  link(rel='stylesheet' href='/css/analytics.css')

block title
  title Quizzard - Analytics

block content
  include navbar
  br
  if isAdmin
    .container
      .row
        .col.s12
          .row
            ul.tabs
              li.tab.col.s6
                a.noLineLink.active#option-class(href='#') Class Analytics
              li.tab.col.s6
                a.noLineLink#option-student(href='#') Student Analytics
  .row
    .col.s12
      if isAdmin
        include class-analytics
      include student-analytics

block scripts
  script(src='/lib/charts/Chart.min.js')
  script(src='/js/common.js')
  script(src='/js/analytics.js')
  script(src='/js/navbar.js')
