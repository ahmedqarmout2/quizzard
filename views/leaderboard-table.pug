.row#overall-board-card
  .col.s12
    table.bordered.centered
      thead
        tr
          th.border Rank
          th.border User ID
          th.border Overall Score

      tbody
        each s in leaderboard
          if s.rank == 0
            tr.col-default
              td.border ...
              td.border ...
              td.border ...

          else
            if s.points != 0 && s.rank <= 3
              if s.rank == 1
                - rowclass = 'col-gold';
              if s.rank == 2
                - rowclass = 'col-silver';
              if s.rank == 3
                - rowclass = 'col-bronze';
            else
              - rowclass = 'col-default';
            if s.id == userid
              - rowclass += ' col-isuser';
            tr(class=rowclass)
              td.border #{s.rank}
              td.border #{s.fname + ' ' + s.lname.substring(0, 1)}
              if s.totalAttemptsCount === 0
                td.border 0
              else
               td.border #{(s.points * ((s.correctAttemptsCount / s.totalAttemptsCount) + (s.points / s.totalAttemptsCount))).toFixed(0)}
