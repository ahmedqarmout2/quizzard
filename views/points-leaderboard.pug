.row#points-board-card
  table.bordered
    thead
      tr
        th Rank
        th User ID
        th Points
        if fullTable
          
    tbody
      each s in leaderboard
        if s.rank == 0
          tr.col-default
            td ...
            td ...
            td ...
        else
          if s.points != 0 && s.rank <= 3
            if s.rank == 1
              - rowclass = 'col-gold';
            if s.rank == 2
              - rowclass = 'col-silver';
            if s.rank == 3
              - rowclass = 'col-bronze';
          else
            - rowclass = 'col-default';
          if s.id == userid
            - rowclass += ' col-isuser';
          tr(class=rowclass)
            td #{s.rank}
            td #{s.id}
            td #{s.points}
