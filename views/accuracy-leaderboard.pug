.row#accuracy-board-card
  .col.s12
    table.bordered
      thead
        tr
          th Rank
          th User ID
          th Accuracy
            
      tbody
        each s in leaderboard
          if s.rank == 0
            tr.col-default
              td ...
              td ...
              td ...
          else
            if s.points != 0 && s.rank <= 3
              if s.rank == 1
                - rowclass = 'col-gold';
              if s.rank == 2
                - rowclass = 'col-silver';
              if s.rank == 3
                - rowclass = 'col-bronze';
            else
              - rowclass = 'col-default';
            if s.id == userid
              - rowclass += ' col-isuser';
            tr(class=rowclass)
              td #{s.rank}
              td #{s.id}
              if s.totalAttemptsCount === 0
                td 0%
              else
                td #{((s.correctAttemptsCount / s.totalAttemptsCount) * 100).toFixed(2)}%
                

